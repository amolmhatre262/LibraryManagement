@model IEnumerable<Library.Models.BookHistoryDto>

<h2>Book History</h2>

@if (!Model.Any())
{
    <p>No history found for this book.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Issue ID</th>
                <th>Member</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Return Date</th>
                <th>Fine Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var record in Model)
            {
                <tr>
                    <td>@record.IssueId</td>
                    <td>@record.MemberName</td>
                    <td>@record.IssueDate.ToShortDateString()</td>
                    <td>@record.DueDate.ToShortDateString()</td>
                    <td>@(record.ReturnDate?.ToShortDateString() ?? "Not Returned")</td>
                    <td>₹@record.FineAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
