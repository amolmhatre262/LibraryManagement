@model System.Data.DataTable
@{
    ViewData["Title"] = "Book History";
}

<div class="container mt-4">
    <h2>Book History (ID: @ViewBag.BookId)</h2>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Member</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Return Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (System.Data.DataRow row in Model.Rows)
            {
                <tr>
                    <td>@row["FullName"]</td>
                    <td>@Convert.ToDateTime(row["IssueDate"]).ToShortDateString()</td>
                    <td>@Convert.ToDateTime(row["DueDate"]).ToShortDateString()</td>
                    <td>@(row["ReturnDate"] == DBNull.Value ? "Not Returned" : Convert.ToDateTime(row["ReturnDate"]).ToShortDateString())</td>
                </tr>
            }
        </tbody>
    </table>
</div>
