@model IEnumerable<Library.Models.OverdueMember>

<h2>Overdue Members</h2>

@if (!Model.Any())
{
    <p>No overdue books!</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Member Name</th>
                <th>Book Title</th>
                <th>Issue Date</th>
                <th>Due Date</th>
                <th>Fine Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model)
            {
                <tr>
                    <td>@member.FullName</td>
                    <td>@member.Email</td>
                    <td>@member.BookTitle</td>
                    <td>@member.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>@member.FineAmount</td>
                </tr>
            }
        </tbody>
    </table>
}
