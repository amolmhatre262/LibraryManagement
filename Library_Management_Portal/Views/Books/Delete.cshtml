@model Library.Models.Books

@{
    ViewBag.Title = "Delete Book";
}

<h2>Delete Book</h2>

<p>Are you sure you want to delete this book?</p>

<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.Title</dd>
    <dt class="col-sm-2">Author</dt>
    <dd class="col-sm-10">@Model.Author</dd>
    <dt class="col-sm-2">ISBN</dt>
    <dd class="col-sm-10">@Model.ISBN</dd>
</dl>

@using (Html.BeginForm("Delete", "Books", new { id = Model.BookId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}