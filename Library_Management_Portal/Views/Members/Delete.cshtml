@model Library.Models.Members

@{
    ViewData["Title"] = "Delete Member";
}

<h2>Delete Member</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this member?
</div>

<div class="card mb-3">
    <div class="card-body">
        <p><strong>Member ID:</strong> @Model.MemberId</p>
        <p><strong>Full Name:</strong> @Model.FullName</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Mobile:</strong> @Model.Mobile</p>
        <p><strong>Is Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
        <p><strong>Created Date:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd")</p>
    </div>
</div>

@using (Html.BeginForm("DeleteConfirmed", "Members", new { id = Model.MemberId }, FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index")" class="btn btn-secondary">Cancel</a>
}